<div class="banner-sign-up banner-login text-center">
<div class="col-xs-12 col-md-6 offset-md-3">
  <div class=" black_bgr mt-5 my-5">
     <div style="background-image: url(https://res.cloudinary.com/dvallavgs/image/upload/v1588767088/Component_3_natrtv.png);">
  <h1 class="text-center text-white">Log in</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs text-white">
   <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

    <%= f.submit "Log in", class: "btn-success w-100 mt-0" %>


 <% end %>
 <%= render "devise/shared/links" %>
 </div>
  </div>
</div>
</div>
